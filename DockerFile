# Stage 1: Build Dependencies
FROM python:3.10-slim AS builder

WORKDIR /app

# Install pip tools
COPY requirements.txt .
RUN pip install --upgrade pip \
 && pip wheel --no-cache-dir --wheel-dir /wheels -r requirements.txt

# Stage 2: Final Image
FROM python:3.10-slim

WORKDIR /app

# Install required system packages
RUN apt-get update && apt-get install -y \
    gcc g++ libffi-dev libxml2-dev libz-dev \
 && apt-get clean && rm -rf /var/lib/apt/lists/*

# Set env variable for NLTK
ENV NLTK_DATA=/usr/local/nltk_data

# Create NLTK directory
RUN mkdir -p /usr/local/nltk_data

# Copy wheels & install all at once (fast af)
COPY --from=builder /wheels /wheels
COPY requirements.txt .
RUN pip install --no-cache-dir --no-index --find-links=/wheels -r requirements.txt

# Download everything at once in a cacheable layer
RUN python -m nltk.downloader punkt stopwords -d /usr/local/nltk_data && \
    python -m spacy download en_core_web_sm && \
    python -c "from sentence_transformers import SentenceTransformer; SentenceTransformer('all-MiniLM-L6-v2')"

# Copy your actual app
COPY . .

EXPOSE 8080
CMD ["python", "app.py"]
